{
  "extends": "@uwu-codes/tsconfig",
  "compilerOptions": {
    "outDir": "./build",
    "baseUrl": "./src",
    "strictPropertyInitialization": false,
    "skipLibCheck": true,
    "inlineSourceMap": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "module": "esnext"
  },
  "include": ["**/*"],
  "exclude": ["node_modules", "build"]
}
